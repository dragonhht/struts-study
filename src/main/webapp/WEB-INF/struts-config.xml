<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://struts.apache.org/dtds/struts-config_1_2.dtd">

<struts-config>
  <data-sources />
  
  <form-beans>  	
  	<!-- 配置登录form -->
  	<form-bean name="loginForm" 
  		type="landray.study.form.StudentForm"></form-bean>
  	
  </form-beans>
  
  <global-exceptions />
  <global-forwards />
  
  <action-mappings >

   <action path="/login"
  		  type="org.springframework.web.struts.DelegatingActionProxy"
		  name="loginForm"
		  parameter="method_"
		  scope="request" >
  		<forward name="index" path="/index.jsp" ></forward>
  </action>
	
  </action-mappings>
  <message-resources parameter="landray.study.struts.ApplicationResources" key="km-books"></message-resources>

</struts-config>

